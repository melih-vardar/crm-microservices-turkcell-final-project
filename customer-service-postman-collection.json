{
  "info": {
    "_postman_id": "customer-service-collection",
    "name": "Customer Service API Collection",
    "description": "Turkcell CRM Microservices - Customer Service API endpoints collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Test Service",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/customers/test",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "test"]
            },
            "description": "Test if the customer service is working"
          },
          "response": []
        }
      ],
      "description": "Endpoints that are accessible without authentication"
    },
    {
      "name": "Customer Management",
      "item": [
        {
          "name": "Get All Customers",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{customer_rep_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/customers",
              "host": ["{{base_url}}"],
              "path": ["api", "customers"]
            },
            "description": "Get all customers (requires CUSTOMER_REPRESENTATIVE role)"
          },
          "response": []
        },
        {
          "name": "Create Customer",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{customer_rep_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phoneNumber\": \"+905551234567\",\n    \"address\": \"123 Main St, Istanbul, Turkey\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/customers",
              "host": ["{{base_url}}"],
              "path": ["api", "customers"]
            },
            "description": "Create a new customer (requires CUSTOMER_REPRESENTATIVE role)"
          },
          "response": []
        },
        {
          "name": "Get Customer by ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{customer_rep_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/customers/{{customer_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "{{customer_id}}"]
            },
            "description": "Get customer details by ID (requires CUSTOMER_REPRESENTATIVE role)"
          },
          "response": []
        },
        {
          "name": "Update Customer",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{customer_rep_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phoneNumber\": \"+905551234567\",\n    \"address\": \"456 New St, Istanbul, Turkey\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/customers/{{customer_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "{{customer_id}}"]
            },
            "description": "Update customer details (requires CUSTOMER_REPRESENTATIVE role)"
          },
          "response": []
        },
        {
          "name": "Delete Customer",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/customers/{{customer_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "{{customer_id}}"]
            },
            "description": "Delete a customer (requires ADMIN role)"
          },
          "response": []
        },
        {
          "name": "Get Customer Bills",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{customer_rep_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/customers/{{customer_id}}/bills",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "{{customer_id}}", "bills"]
            },
            "description": "Get all bills for a customer (requires CUSTOMER_REPRESENTATIVE role)"
          },
          "response": []
        },
        {
          "name": "Get Customer Contracts",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{customer_rep_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/customers/{{customer_id}}/contracts",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "{{customer_id}}", "contracts"]
            },
            "description": "Get all contracts for a customer (requires CUSTOMER_REPRESENTATIVE role)"
          },
          "response": []
        }
      ],
      "description": "Customer management endpoints"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Store customer ID after creation",
          "if (pm.response.code === 201) {",
          "    if (pm.response.json() && pm.response.json().id) {",
          "        pm.environment.set('customer_id', pm.response.json().id);",
          "    }",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8020",
      "type": "string"
    },
    {
      "key": "customer_rep_token",
      "value": "",
      "type": "default"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "default"
    },
    {
      "key": "customer_id",
      "value": "",
      "type": "default"
    }
  ]
} 